extends layout

block content
  head
    title CISUM Player
  body
    nav
      ul
        li
          a(href="/").fab.fa-napster
        li 
          a(id="login_a").fas.fa-toggle-off
          //- .fas.fa-toggle-on
    section(id="main-section")
      aside(id="left-menu")
        i.fas.fa-search
        include ./cisumList.pug
      section(id="content")
        div(id="playlist-body")
          include ./playList.pug
      aside(id="right-menu")
        div(id="player-body").loading
          include ./player.pug
  footer
    div
      button(type="button").fas.fa-fast-backward
      button(type="button").fas.fa-play
      button(type="button").fas.fa-fast-forward
      button(type="button").fas.fa-stop
      button(type="button").fas.fa-volume-up
        //- i.fas.fa-volume-down
        //- i.fas.fa-volume-mute
      input(type="range", style="padding-center:18px", value="100")