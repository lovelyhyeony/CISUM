extends layout

block content
  head
    title CISUM Player
  body
    nav
      ul
        li
          a(href="/").fab.fa-napster
        li 
          a(id="login_a").fas.fa-check
    section(id="main-section")
      aside(id="left-menu")
        include ./cisumList.pug
      section(id="content")
        div(id="playlist-body")
          include ./playList.pug
      aside(id="right-menu")
        div(id="player-body").loading
          include ./player.pug
  footer
    button(type="button")
      i.fas.fa-fast-backward
    button(type="button")
      i.fas.fa-play
    button(type="button")
      i.fas.fa-fast-forward
    button(type="button")
      i.fas.fa-stop
    button(type="button") 
      i.fas.fa-volume-up
      //- i.fas.fa-volume-down
      //- i.fas.fa-volume-mute
    input(type="range", style="padding-center:18px", value="100")